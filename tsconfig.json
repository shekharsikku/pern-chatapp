{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
  },
  "ts-node": {
    "files": true,
  },
  "include": [
    "src/**/*.ts",
    "backend/prisma/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "client/dist/**/*",
    "**/*.spec.ts",
  ]
}